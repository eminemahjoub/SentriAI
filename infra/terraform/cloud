# Terraform configuration for cloud deployment

provider "aws" {
  region = "us-east-1"
}

resource "aws_s3_bucket" "siem_logs" {
  bucket = "siem-logs-bucket"
  acl    = "private"

  versioning {
    enabled = true
  }

  lifecycle {
    prevent_destroy = true
  }
}

resource "aws_iam_role" "siem_role" {
  name = "siem_role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Principal = {
          Service = "ec2.amazonaws.com"
        }
        Effect = "Allow"
        Sid    = ""
      },
    ]
  })
}

resource "aws_iam_policy" "siem_policy" {
  name        = "siem_policy"
  description = "Policy for SIEM services"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "s3:PutObject",
          "s3:GetObject",
          "s3:ListBucket"
        ]
        Effect   = "Allow"
        Resource = [
          aws_s3_bucket.siem_logs.arn,
          "${aws_s3_bucket.siem_logs.arn}/*"
        ]
      },
      {
        Action = "logs:*"
        Effect = "Allow"
        Resource = "*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "siem_role_policy" {
  role       = aws_iam_role.siem_role.name
  policy_arn = aws_iam_policy.siem_policy.arn
}

resource "aws_ec2_instance" "siem_instance" {
  ami           = "ami-0c55b159cbfafe01e" # Example AMI ID
  instance_type = "t2.micro"
  key_name      = "your-key-pair"

  iam_instance_profile = aws_iam_role.siem_role.name

  tags = {
    Name = "SIEM Instance"
  }
}